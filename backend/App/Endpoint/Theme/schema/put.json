{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "additionalProperties": false,
    "properties": {
        "tags": {
            "type": "array",
            "items": {
                "type": "number"
            },
            "minItems": 1,
            "maxItems": 4
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 255
        },
        "reference": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                }
            },
            "required": [
                "url"
            ]
        }
    },
    "required": [
        "tags",
        "name",
        "reference"
    ],
    "type": "object"
}