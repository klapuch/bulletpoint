{cache 'information_source', expire => '30 days'}
    {$source->author() ?: 'Autor není uveden'}
    <cite>
        {$source->place() ?: 'Místo zdroje není uvedeno'}
        {$source->year() ? 'z roku ' . $source->year() : ''}
    </cite>
{/cache}
{if $user->isAllowed('Zdroj', 'upravit')}
    <a href="{plink Zdroj:Upravit $source->id(), backlink => $backlink}"
       title="Upravit zdroj">
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
    </a>
{/if}